<% if user_signed_in? %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong></strong>
      <%= comment.body %>
    </p>

    <p>
      <%= link_to 'Destroy Comment', [comment.post, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </p>

<% else %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong></strong>
      <%= comment.body %>
    </p>

<% end %>