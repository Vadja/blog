<h1>Listing Posts</h1>
<% if user_signed_in? %>
    <%= link_to 'New post', new_post_path %><br>
    <span>Welcome, <%= current_user.email %></span>
    <%= link_to 'Exit', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Enter', new_user_session_path %> or <%= link_to 'Register', new_user_registration_path %>
<% end %>
<% if user_signed_in? %>
<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.author %></td>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
<% else %>
    <table>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>

      <% @posts.each do |post| %>
          <tr>
            <td><%= post.author %></td>
            <td><%= post.title %></td>
            <td><%= post.text %></td>
            <td><%= link_to 'Show', post_path(post) %></td>
          </tr>
      <% end %>
    </table>
<% end %>